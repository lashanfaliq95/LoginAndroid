<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_signup"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.lasha.fruitbasket.SignUpActivity">

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="48dp"
        android:layout_marginStart="48dp"
        android:layout_marginTop="49dp"
        android:id="@+id/userName"
        android:hint="enter user name"
        tools:background="@android:drawable/editbox_background_normal" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:layout_marginTop="36dp"
        android:id="@+id/passwordSign"
        android:hint="enter password"
        android:layout_below="@+id/userName"
        android:layout_alignLeft="@+id/userName"
        android:layout_alignStart="@+id/userName"
        tools:background="@android:drawable/editbox_background_normal" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:id="@+id/confirmPassword"
        android:hint="confirm password"
        android:layout_marginTop="33dp"
        android:layout_below="@+id/passwordSign"
        android:layout_alignLeft="@+id/passwordSign"
        android:layout_alignStart="@+id/passwordSign"
        tools:background="@android:drawable/editbox_background_normal" />

    <Button
        android:text="Create Account"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="59dp"
        android:id="@+id/createAccount"
        android:layout_below="@+id/confirmPassword"
        android:layout_alignRight="@+id/confirmPassword"
        android:layout_alignEnd="@+id/confirmPassword"
        android:layout_marginRight="33dp"
        android:layout_marginEnd="33dp" />
</RelativeLayout>
